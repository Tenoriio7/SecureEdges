<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <!--  Nome aplicação-->
  <display-name>Secure Edges</display-name>
  <!--Arquivo principal (index)-->
  <welcome-file-list>
    <welcome-file>Pages/Principal.xhtml</welcome-file>
  </welcome-file-list>
  <listener>
		<listener-class>
			br.com.secureedges.core.ClasseListener
		</listener-class>
	</listener>
  <!--Configuração Servlet JSF-->
  <servlet>
    <servlet-name>Faces Servlet</servlet-name>
    <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
    <!--Inicializar quando iniciar Tomcat-->
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>Faces Servlet</servlet-name>
    <!--Tipo que ira tratar-->
    <url-pattern>*.xhtml</url-pattern>
  </servlet-mapping>
  <context-param>
    <param-name>primefaces.THEME</param-name>
    <param-value>rocket</param-value>
  </context-param> 
</web-app>